<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stock.webpage.mapper.MemberMapper">

    <!-- =========================
         member 조회
         ========================= -->

    <!-- MID 조회 -->
    <select id="selectMemberByMid" resultType="MemberDto">
        SELECT
            mid,
            mpw,
            email,
            del,
            social
        FROM member
        WHERE mid = #{mid}
    </select>

    <!-- EMAIL 조회 -->
    <select id="selectMemberByEmail" resultType="MemberDto">
        SELECT
            mid,
            mpw,
            email,
            del,
            social
        FROM member
        WHERE email = #{email}
    </select>

    <!-- MID 또는 EMAIL 조회 (로그인용) -->
    <select id="selectMemberByMidOrEmail"
            parameterType="string"
            resultType="MemberDto">
        SELECT
            mid,
            mpw,
            email,
            del,
            social
        FROM member
        WHERE mid = #{keyword}
           OR email = #{keyword}
    </select>

    <!-- =========================
         member insert
         ========================= -->
    <insert id="insertMember">
        INSERT INTO member (
            mid,
            mpw,
            email,
            del,
            social
        ) VALUES (
                     #{mid},
                     #{mpw},
                     #{email},
                     #{del},
                     #{social}
                 )
    </insert>

    <!-- =========================
         password update
         ========================= -->
    <update id="updatePassword">
        UPDATE member
        SET mpw = #{mpw}
        WHERE mid = #{mid}
    </update>

    <!-- =========================
         roles
         ========================= -->
    <select id="selectRolesByMid" resultType="string">
        SELECT role_set
        FROM member_role_set
        WHERE member_mid = #{mid}
    </select>

    <insert id="insertRole">
        INSERT INTO member_role_set (
            member_mid,
            role_set
        ) VALUES (
                     #{mid},
                     #{role}
                 )
    </insert>

    <delete id="deleteRolesByMid">
        DELETE FROM member_role_set
        WHERE member_mid = #{mid}
    </delete>

</mapper>

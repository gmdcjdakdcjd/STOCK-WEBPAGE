<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ========================= -->
    <!-- LOCAL -->
    <!-- ========================= -->
    <springProfile name="local">
        <property name="LOG_PATH" value="D:/STOCK_PROJECT_V2/LOCAL_STOCK_LOGS"/>
    </springProfile>

    <!-- ========================= -->
    <!-- DOCKER -->
    <!-- ========================= -->
    <springProfile name="docker">
        <property name="LOG_PATH" value="/logs"/>
    </springProfile>

    <property name="LOG_FILE" value="${LOG_PATH}/webpage.log"/>

    <!-- ========================= -->
    <!-- 콘솔 로그 -->
    <!-- ========================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ========================= -->
    <!-- 파일 로그 (일자별 롤링) -->
    <!-- ========================= -->
    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${LOG_FILE}</file>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_PATH}/webpage.%d{yyyy-MM-dd}.log
            </fileNamePattern>
            <maxHistory>60</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level %logger - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ========================= -->
    <!-- Root Logger -->
    <!-- ========================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
